<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ns3:AppSchemaDataAccess xmlns:ns2="http://www.opengis.net/ogc" xmlns:ns3="http://www.geotools.org/app-schema">
    <namespaces>
        <Namespace>
            <prefix>sira</prefix>
            <uri>http://www.regione.piemonte.it/ambiente/sira/1.0</uri>
        </Namespace>
        <Namespace>
            <prefix>gml</prefix>
            <uri>http://www.opengis.net/gml/3.2</uri>
        </Namespace>
    </namespaces>
    <includedTypes/>
    <sourceDataStores>
        <DataStore>
            <id>sira</id>
            <parameters>
                <Parameter>
                    <name>directory</name>
                    <!-- path can be relative to this file if starts with "file: -->
                    <value>file:./</value>
                </Parameter>
            </parameters>
        </DataStore>
    </sourceDataStores>
    <catalog>sira-catalog.xml</catalog>
    <targetTypes>
        <FeatureType>
            <schemaUri>http://www.regione.piemonte.it/ambiente/sira/1.0/sipra.xsd</schemaUri>
        </FeatureType>
    </targetTypes>
    <typeMappings>
        <FeatureTypeMapping>
            <sourceDataStore>sira</sourceDataStore>
            <sourceType>istanza</sourceType>
            <targetElement>sira:IstanzaAutorizzativa</targetElement>
            <attributeMappings>
                <AttributeMapping>
                    <targetAttribute>sira:dataRilascio</targetAttribute>
                    <sourceExpression>
                        <OCQL>data_rilascio</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>sira:nrProvvedimento</targetAttribute>
                    <sourceExpression>
                        <OCQL>nr_provvedimento</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>sira:tipoRichiesta/sira:TipoRichiesta/sira:descrizione</targetAttribute>
                    <sourceExpression>
                        <OCQL>des_tipo_richiesta</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>sira:procedimento/sira:Procedimento/sira:descrizione</targetAttribute>
                    <sourceExpression>
                        <OCQL>des_procedimento</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>sira:procedimento/sira:Procedimento/sira:codiceBdc</targetAttribute>
                    <sourceExpression>
                        <OCQL>codice_bdc</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>sira:IstanzaAutorizzativa</targetAttribute>
                    <idExpression>
                        <OCQL>strConcat('istanza.', id_istanza)</OCQL>
                    </idExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>sira:procedimento/sira:Procedimento</targetAttribute>
                    <ClientProperty>
                        <name>gml:id</name>
                        <value>strConcat('procedimento.', id_procedimento)</value>
                    </ClientProperty>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>sira:tipoRichiesta/sira:TipoRichiesta</targetAttribute>
                    <ClientProperty>
                        <name>gml:id</name>
                        <value>strConcat('tipo_richiesta.', id_tipo_richiesta)</value>
                    </ClientProperty>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>FEATURE_LINK[1]</targetAttribute>
                    <sourceExpression>
                        <OCQL>id_istanza</OCQL>
                    </sourceExpression>
                </AttributeMapping>
            </attributeMappings>
        </FeatureTypeMapping>
    </typeMappings>
</ns3:AppSchemaDataAccess>
